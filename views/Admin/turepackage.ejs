<!DOCTYPE html>
<html lang="en">
    <%- include("common/head") %>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <div class="preloader flex-column justify-content-center align-items-center">
    <img class="animation__wobble" src="admin/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
  </div>

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-dark">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
    </ul>

  
  </nav>
  <!-- /.navbar -->
<!-- sidebar -->
  <%- include("common/sidebar") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Top Ture Package</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Package</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
         
          <!-- fix for small devices only -->
          <div class="clearfix hidden-md-up"></div>

          <div class="col-12 col-md-9">
            <% if (message.length>0) {%> 
              <div class="alert alert-success">
                <%= message %>
              </div>  
              <% } %>  
            <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Top Ture Package</h3>
                </div>
           
                <div class="card-body">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                      <th>Location</th>
                      <th>Package Name</th>
                      <th>Days</th>
                      <th>Packge Cost</th>
                      <th>Total Parson</th>
                      <th>Citys</th>
                      <th>Image</th>
                      <th>delete</th>
                     
                    </tr>
                    </thead>
                    <% if(package.length>0) {%>
                      <tbody>
                        <% for(let turepackage of package){ %>
                        <tr>
                          <td><%= turepackage.location %></td>
                          <td><%= turepackage.package_name %></td>
                          <td><%= turepackage.days %></td>
                          <td><%= turepackage.price%></td>
                          <td><%= turepackage.parson %></td>
                          <td><%= turepackage.package_name %></td>
                      
                          <%
                          const filePaths = turepackage.photo
                          const fileArray = filePaths.split(',');
                          const jj= fileArray
                          %>
                          
                        <td><img src="<%- jj[0] %>" height="50px" width="50px" alt="xx"></td>

                        <td><a href="/ture-package/delete/<%= turepackage.id %>" class="btn btn-danger">Delete</a></td>
                         
                        </tr>
                      </tbody>
                      <%}}else{%>
                      <h1>No Data Found</h1>
                      <% } %>
              </tbody>
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
          </div>
          <!-- /.col -->
          <div class="col-12 col-md-3">
           <h2>Add Ture Package</h2>
                <form action="/ture-package/create" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                      <% if (error.length>0) {%> 
                        <div class="alert alert-danger">
                          <%= error %>
                        </div>  
                        <% } %>  
                      <div class="form-group">
                        <label for="exampleInputEmail1">Location</label>
                        <input type="text" name="location" class="form-control" id="exampleInputEmail1">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Package Name</label>
                        <input type="text" name="package_name" class="form-control" id="exampleInputEmail1">
                      </div>
                     
                      <div class="form-group">
                        <label for="exampleSelectBorder">How Many Days</label>
                        <select name="days" class="custom-select package" id="exampleSelectBorder">
                          <option selected>select days</option>
                          <option value="One Days">One Days</option>
                          <option value="Two Days">Two Days</option>
                          <option value="Three Days">Three Days</option>
                          <option value="Four Days">Four Days</option>
                          <option value="Five Days">Five Days</option>
                          <option value="Six Days">Six Days</option>
                          <option value="Seven Days">Seven Days</option>
                          
                        </select>
                      </div>
                      <div class="form-group">
                        <label> Packge Cost</label>
                        <input type="text" class="form-control fees" name="price" readonly required/>
                    </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1"> Total Parson</label>
                        <input type="text" name="parson" class="form-control" id="exampleInputEmail1">
                      </div>
                      
                      <div class="form-group">
                        <label for="exampleInputEmail1">Citys</label>
                        <input type="text" name="city" class="form-control" id="exampleInputEmail1">
                      </div>
                      
                      <div class="form-group">
                        <label for="exampleInputFile">Image</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input type="file" name="photo" multiple accept="image/png, image/gif, image/jpeg" class="form-control" id="exampleInputFile">
                            
                          </div>
                         
                        </div>
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </form>
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>

  <script>
     $('.package').on('change',function(e){
        // alert("Hi");
        // console.log($('.courses option:selected').text());
        const data = $('.package option:selected').text();
        if(data == "One Days"){
            $('.fees').val(5000);
        }else if(data == "Two Days"){
            $('.fees').val(8000);
        }else if(data == "Three Days"){
            $('.fees').val(8500);
        }
        else if(data == "Four Days"){
            $('.fees').val(9000);
        }
        else if(data == "Five Days"){
            $('.fees').val(10000);
        }
        else if(data == "Six Days"){
            $('.fees').val(12000);
        }
        else if(data == "Seven Days"){
            $('.fees').val(14000);
        }
    });
  </script>
  <!-- Main Footer -->
  <%- include("common/footer") %>
